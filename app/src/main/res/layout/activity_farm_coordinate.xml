<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FarmCoordinateActivity">

    <include
        android:id="@+id/appbar"
        layout="@layout/back_app_bar"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/appbar"
        android:layout_width="match_parent"
        app:layout_constraintVertical_weight="0.65"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">

        <FrameLayout
            android:id="@+id/location_1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dimen_24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_1"
                android:layout_width="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:src="@android:color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1"
                android:elevation="16dp"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </FrameLayout>

        <View
            app:layout_constraintTop_toBottomOf="@id/location_1"
            app:layout_constraintBottom_toTopOf="@id/location_2"
            app:layout_constraintLeft_toRightOf="@id/location_2"
            app:layout_constraintRight_toLeftOf="@id/location_1"
            android:layout_width="0dp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_height="0dp"
            android:background="@drawable/diagonal_line" />

        <FrameLayout
            android:id="@+id/location_2"
            app:layout_constraintTop_toBottomOf="@id/location_1"
            app:layout_constraintBottom_toTopOf="@id/location_4"
            android:layout_marginStart="@dimen/dimen_24"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:src="@android:color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="2"
                android:elevation="16dp"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </FrameLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/diagonal_line"
            android:backgroundTint="@color/colorPrimary"
            android:rotationY="-178"
            app:layout_constraintBottom_toTopOf="@id/location_3"
            app:layout_constraintLeft_toRightOf="@id/location_1"
            app:layout_constraintRight_toLeftOf="@id/location_3"
            app:layout_constraintTop_toBottomOf="@id/location_1" />

        <FrameLayout
            android:id="@+id/location_3"
            app:layout_constraintTop_toBottomOf="@id/location_1"
            app:layout_constraintBottom_toTopOf="@id/location_4"
            android:layout_marginEnd="@dimen/dimen_24"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:src="@android:color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="3"
                android:elevation="16dp"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </FrameLayout>

        <View
            app:layout_constraintTop_toBottomOf="@id/location_3"
            app:layout_constraintBottom_toTopOf="@id/location_4"
            app:layout_constraintLeft_toRightOf="@id/location_4"
            app:layout_constraintRight_toLeftOf="@id/location_3"
            android:layout_width="0dp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_height="0dp"
            android:background="@drawable/diagonal_line" />

        <FrameLayout
            android:id="@+id/location_4"
            app:layout_constraintTop_toBottomOf="@id/location_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@id/location_1"
            app:layout_constraintLeft_toLeftOf="@id/location_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:src="@android:color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="4"
                android:elevation="16dp"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </FrameLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/diagonal_line"
            android:backgroundTint="@color/colorPrimary"
            android:rotationY="-178"
            app:layout_constraintBottom_toTopOf="@id/location_4"
            app:layout_constraintLeft_toRightOf="@id/location_2"
            app:layout_constraintRight_toLeftOf="@id/location_4"
            app:layout_constraintTop_toBottomOf="@id/location_2" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>